---
const currentLang = 'zh-CN';

const footerLinks = currentLang === 'zh-CN' 
  ? [
    { name: '隐私政策', href: 'https://github.com/chenfan0/fideo-live-record/blob/main/README-CN.md#fideo%E9%9A%90%E7%A7%81%E6%94%BF%E7%AD%96', external: true },
    { name: '免责声明', href: 'https://github.com/chenfan0/fideo-live-record/blob/main/README-CN.md#%E5%85%8D%E8%B4%A3%E7%94%B3%E6%98%8E', external: true },
    { name: 'GitHub', href: 'https://github.com/chenfan0/fideo-live-record', external: true },
  ]
  : [
    { name: 'Privacy Policy', href: 'https://github.com/chenfan0/fideo-live-record/blob/main/README-CN.md#fideo%E9%9A%90%E7%A7%81%E6%94%BF%E7%AD%96' },
    { name: 'Terms of Service', href: 'https://github.com/chenfan0/fideo-live-record/blob/main/README-CN.md#%E5%85%8D%E8%B4%A3%E7%94%B3%E6%98%8E' },
    { name: 'GitHub', href: 'https://github.com/chenfan0/fideo-live-record', external: true },
  ];
---

<footer class="bg-gray-900 border-t border-gray-800 mt-auto">
  <div class="max-w-7xl mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <!-- 版权信息 -->
      <div class="text-gray-400 text-sm mb-4 md:mb-0">
        © {new Date().getFullYear()} Fideo. {currentLang === 'zh-CN' ? '保留所有权利' : 'All rights reserved.'}
      </div>

      <!-- 链接 -->
      <nav class="flex space-x-6">
        {footerLinks.map((link) => (
          <a
            href={link.href}
            target={link.external ? "_blank" : "_self"}
            rel={link.external ? "noopener noreferrer" : ""}
            class="text-gray-400 hover:text-white transition-colors duration-200 text-sm"
          >
            {link.name}
          </a>
        ))}
      </nav>
    </div>
  </div>
</footer> 